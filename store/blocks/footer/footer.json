{
  "footer": {
    "blocks": [
      "footer-layout.desktop",
      "footer-layout.mobile"
    ]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop",
      "flex-layout.row#footer-4-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#Products",
      "vtex.menu@2.x:menu#footer-clothing",
      "vtex.menu@2.x:menu#footer-decoration",
      "vtex.menu@2.x:menu#footer-social-networks",
      "vtex.menu@2.x:menu#footer-payment"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },
  "vtex.menu@2.x:menu#footer-social-networks": {
    "props": {
      "orientation": "vertical"
    },
    "children": [
      "rich-text#title4",
      "social-networks"
    ]
  },
  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/vtexonline"
        }
      ]
    }
  },
  "rich-text#title4": {
    "props": {
      "text": "Redes Sociales",
      "blockClass": "menuItemTitle2"
    }
  },
  "vtex.menu@2.x:menu#footer-payment":{
    "props": {
      "orientation": "vertical"
    },
    "children": [
      "rich-text#title5",
      "accepted-payment-methods"
    ]
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": [
        "Diners Club",
        "MasterCard",
        "Visa",
        "Diners Club"
      ]
    }
  },
  "rich-text#title5": {
    "props": {
      "text": "Pagos Seguros",
      "blockClass": "menuItemTitle2"
    }
  },
  "flex-layout.row#footer-2-desktop": {
    "children": [
      "flex-layout.col#space",

      "flex-layout.col#space",
      "rich-text#newsletter",
      "newsletter-form#email",
      "newsletter-form#submit"
    ],
    "props": {
      "blockClass": "menu-row"
    }
  },
  "rich-text#newsletter": {
    "props": {
      "text": "Hey, hey, Get our news first",
      "blockClass": "labelNewsletter"
    }
  },
  "newsletter-form#email": {
    "children": [
      "newsletter-input-email"
    ],
    "props": {
      "blockClass": "newsletter-email"
    }
  },
  "newsletter-form#submit": {
    "children": [
      "newsletter-submit"
    ],
    "props": {
      "blockClass": "newsletter-submit"
    }
  },
  "flex-layout.row#footer-3-desktop": {
    "children": [
      "image#logo",
      "flex-layout.col#space",
      "flex-layout.col#space"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingBottom": 4
    }
  },
  "flex-layout.row#footer-4-desktop": {
    "children": [
      "rich-text#footerbotton"
    ],
    "props": {
      "fullWidth": true,
      "blockClass": "footerbotton"
    }
  },
  "rich-text#footerbotton": {
    "props": {
      "text": "(C) 2022 PuntoMotriz Demo E Commerce by Punto Commerce",
      "blockClass": "footerbotton"
    }
  },
  "flex-layout.col#space": {
    "props": {
      "width": "grow"
    }
  },
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": [
      "flex-layout.col#footer-1-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "social-networks",
      "image#logoMobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": [
      "vtex.menu@2.x:menu#footer-mobile"
    ]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  },
  "image#logoMobile": {
    "props": {
      "src": "assets/logoFooter.png"
    }
  },
  "image#logo": {
    "props": {
      "src": "assets/logoFooter.png",
      "blockClass": "logoFooter"
    }
  }
}